{
  "name": "Uptae",
  "description": "Uptae is a Slackbot that lets you know what people are up to.",
  "repository": "https://github.com/weejames/uptae",
  "success_url": "/",
  "scripts": {
    "postdeploy": "npm run migrate"
  },
  "env": {
    "WEBHOOK_URL": {
      "description": "Webhook URL from Slack to allow the bot to post information to your channel",
      "required": true
    },
    "SLACK_TOKEN": {
      "description": "Slack bot RTM API token",
      "required": false
    },
    "NODE_ENV": "production"
  },
  "image": "heroku/nodejs",
  "addons": [
      {
        "plan": "heroku-postgresql",
        "options": {
          "version": "9.5"
        }
      }
    ]
}
